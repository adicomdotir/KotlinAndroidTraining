<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_boutique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/pic1_clothes" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_boutique">

        <TextView
            android:id="@+id/tv_boutique_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_font_size"
            android:text=" عنوان نمونه" />

        <TextView
            android:id="@+id/tv_boutique_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_boutique_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_font_size"
            android:text="700" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_boutique_count"
            android:layout_alignBottom="@id/tv_boutique_count"
            android:layout_toStartOf="@id/tv_boutique_count"
            android:src="@drawable/ic_action_ic_views_white" />
    </RelativeLayout>

</RelativeLayout>