<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and not pressed -->
    <item android:color="#A52B2B" android:state_focused="true" android:state_pressed="false" />

    <!-- Focused and pressed -->
    <item android:color="#FFEB3B" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed -->
    <item android:color="#FF5722" android:state_focused="false" android:state_pressed="true" />

    <!-- Default color -->
    <item android:color="#4CAF50" />

</selector>